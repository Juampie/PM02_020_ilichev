<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Common Styles -->
    <Style TargetType="Button">
        <Setter Property="Height" Value="30"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="FontFamily" Value="Tw Cen MT"/>
        <Setter Property="Background" Value="#FF9C1A"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="Tw Cen MT"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#37474F"/>
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Tw Cen MT"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="#546E7A"/>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Height" Value="30"/>
        <Setter Property="FontFamily" Value="Tw Cen MT"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <!-- Title Styles -->
    <Style TargetType="Page">
        <Setter Property="Title" Value="Your Logo Title"/>
    </Style>

    <!-- Accent Color for Target Action -->
    <Style TargetType="Button" x:Key="AccentButtonStyle">
        <Setter Property="Background" Value="#FF9C1A"/>
    </Style>

</ResourceDictionary>